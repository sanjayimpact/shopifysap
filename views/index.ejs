<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopify App Authentication</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm">
          <div class="card-header text-center bg-primary text-white">
            <h4>Shopify App Installation</h4>
          </div>
          <div class="card-body">
            <form id="authForm">
              <div class="mb-3">
                <label for="shop" class="form-label">Enter your Shopify Store URL:</label>
                <input type="text" id="shop" name="shop" class="form-control" placeholder="example.myshopify.com" required>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary ps-4 pe-4">Install</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Script for form submission -->
  <script>
    document.getElementById('authForm').addEventListener('submit', function(event) {
      event.preventDefault(); // Prevent form default behavior

      const shop = document.getElementById('shop').value.trim();
      if (!shop) {
        alert('Please enter your Shopify store URL.');
        return;
      }

      // Redirect to backend authentication route
      window.location.href = `/api/auth?shop=${shop}`;
    });
  </script>
</body>
</html>
